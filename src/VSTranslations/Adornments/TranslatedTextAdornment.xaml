<UserControl x:Class="VSTranslations.Adornments.TranslatedTextAdornment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VSTranslations.Adornments"
             mc:Ignorable="d">
    <WrapPanel Orientation="Horizontal">
        <TextBlock x:Name="TranslatedTextBox" TextWrapping="NoWrap" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Run Text="//" />
            <Run Text="Text" x:Name="TranslatedText" />
        </TextBlock>
    </WrapPanel>
</UserControl>
